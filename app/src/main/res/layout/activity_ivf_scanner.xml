<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IVFScannerActivity">
    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/zxing_barcode_scanner_cf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:zxing_framing_rect_height="350dp"
        app:zxing_framing_rect_width="350dp"
        app:zxing_preview_scaling_strategy="fitXY"
        app:zxing_use_texture_view="true"/>

    <Switch
        android:id="@+id/switch_flashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/zxing_possible_result_points"
        android:text="@string/turn_off_flashlight"
        tools:ignore="MissingConstraints"
        android:onClick="switchFlashlight"/>
</androidx.constraintlayout.widget.ConstraintLayout>